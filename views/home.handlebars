<nav class="navbar bg-dark">
    <div class="container-fluid">
        <div class="d-flex justify-content-start align-items-center">
            <a class="navbar-brand text-white font-weight-bold">BlogZIN</a>
        </div>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>

</nav>
<div class="navbar bg-primary container-fluid d-flex justify-content-center align-items-center">
    <a href="/cadastro"> <button class="btn btn-dark btn-sm">Criar postagem</button></a>
</div>

{{#each posts}}
<div class="d-flex justify-content-center align-items-center flex-column">
    <div class="bg-secondary mt-5 p-3 rounded-2" style="width: 80vh;">

        <div class="d-flex justify-content-center mt-3" id="teste">
            <div class="w-75 d-flex align-items-center rounded-1 text-wrap h-auto p-3 flex-column"
                style="background-color: rgb(210, 210, 210)">
                <h1 class="mt-1 h5 text-black mb-3 align-self-start">||{{titulo}}</h1>
                <hr class="bg-dark">
                <h6 class="mb-0 lead h6" style="color: black;">{{conteudo}}</h6>
            </div>
        </div>
        <div class="d-flex justify-content-between" style="height: 100%;">
            <div class="align-self-center">
                <a href="/editar/{{id}}"> <button class="btn btn-primary">Editar</button></a>
                <a href="/deletar/{{id}}" class="is-flex is-justify-content-flex-end align-items-center"
                    style="margin-right: 4vh;">
                    <button class="btn btn-danger">Deletar</button></a>
            </div>
            <div class="bg-info d-flex justify-content-center flex-column align-items-center rounded-3 m-2"
                style="width: 30%;">
                <p class="mb-0 mt-2" style="font-size: 100% !important;">{{dataValues.fmtCreatedAt}}</p>
                <p class="mb-1" style="font-size: 100% !important;">Postado hรก {{dataValues.diferenca}} dia(s)</p>
            </div>
        </div>


    </div>
</div>
{{/each}}